{
  "schemaVersion": 1,
  "id": "betterbookshelves",
  "version": "${mod_version}",

  "name": "Better Bookshelves",
  "description": "This is a mod that modifies Minecraft's Chiseled Bookshelves to be more useful.",
  "authors": [
    "Bawnorton"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "com.bawnorton.betterbookshelves.client.BetterBookshelvesClient"
    ],
    "main": [
      "com.bawnorton.betterbookshelves.BetterBookshelves"
    ]
  },
  "mixins": [
    "betterbookshelves.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
